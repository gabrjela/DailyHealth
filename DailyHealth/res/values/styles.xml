<?xml version="1.0" encoding="utf-8"?>

<resources>
    <style name="Theme.CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/filled_box</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:textColorPrimary">#ffffff</item>
        <item name="android:textColorSecondary">#ffffff</item>
        <item name="android:textColorTertiary">#ffffff</item>
    </style>
    
	<style name="Theme.CustomPopup" parent="@android:style/Theme.Holo.Light.Dialog">
        <!-- <item name="android:layout_gravity">left|top</item> -->
        <item name="android:windowActionModeOverlay">false</item>
    </style>        
    
    <!-- A theme that has a translucent background.  Here we explicitly specify
         that this theme is to inherit from the system's translucent theme,
         which sets up various attributes correctly. -->
    <style name="Theme.Translucent" parent="android:style/Theme.Translucent">
        <item name="android:windowBackground">@drawable/translucent_background</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:colorForeground">@null</item>
    </style>
    
    <style name="CustomActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:actionBarStyle">@style/customActionBarTabBarStyle</item>
        <item name="android:displayOptions">useLogo|showHome|showTitle</item>
        <item name="android:windowNoTitle">false</item>
    </style>
    <style name="customActionBarTabBarStyle" >
        <item name="android:background">@drawable/action_bar_bkg</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:clickable">true</item>
    </style>
    
    <style name="customImageStyle">
        <item name="android:background">@drawable/circular_gradient</item>
        <item name="android:text">Nutrition</item>
        <item name="android:textStyle">bold</item>
    </style>        
    
    <style name="CustomListViewStyle" parent="@android:style/Widget.ListView.White">
        <item name="android:dividerHeight">2dip</item>
     </style>
    
	<style name="popupHeaderTextStyle"> 
	    <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
	    <item name="android:textColor">#000000</item>
	    <item name="android:textStyle">bold</item>
	</style>
	
	<style name="popupItemTextStyle"> 
	    <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
	    <item name="android:textColor">#000000</item>
	    <item name="android:textStyle">bold</item>
	    <item name="android:textColorHighlight">@color/gray</item>
	    <item name="android:typeface">serif</item>
	</style>
	
	<style name="itemDescriptionStyle"> 
	    <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
	    <item name="android:textColor">#000000</item>
	</style>  	    
    
</resources>